{
    "record": {
        "*": {
            "all": true,
            "listen": false
        },
        "game-score/$gameId": {
            //publicly readable
            "read": true,
            //writable only by provider
            "write": "user.data.role === 'provider'"
        },

        "game-comment/$gameId/$userId/$commentId": {
            // readable by all logged in (authenticated) users
            "read": "user.isAuthenticated === true",
            // Users can only create / edit comments with their own userid
            // Each comment must have a title and a content field that are strings
            "write": "user.id === $userId && typeof data.title ===  'string' && data.content ===  'string"
        }
    },
    "event": {
        "*": {
            "publish": false,
            "subscribe": false
        }
    },
    "rpc": {
        "*": {
            "provide": false,
            "request": false
        }
    }
}